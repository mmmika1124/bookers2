    <p id="notice"></p>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          <%= render 'layouts/info', user: @user, book: @book %>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <td>
                  <% if @user.profile_image.attached? %>
                    <%= link_to user_path(@user.id), class: "attachment user profile_image fallback" do %>
                      <%= image_tag @user.profile_image, size: "40x40" %><br>
                      <%= @user.name %>
                    <% end %>
                  <% else %>
                    <%= link_to user_path(@user.id), class: "attachment user profile_image fallback" do %>
                      <%= image_tag 'no_image', size: "40x40" %><br>
                      <%= @user.name %>
                    <% end %>
                  <% end %>
                </td>
                <td><%= link_to @book.title, book_path(@book) %></td>
                <td><%= @book.body %></td>
                <td>
                  <% if @book.user == current_user %>
                    <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %>
                  <% end %>
                </td>
                <td>
                  <% if @book.user == current_user %>
                    <%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger" %>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
